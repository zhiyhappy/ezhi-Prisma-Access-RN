    <ike>
      <crypto-profiles>
        <ike-crypto-profiles>
          <entry name="{{ ike_crypto_name }}">
            <encryption>
              <member>{{ ike_encryption }}</member>
            </encryption>
            <dh-group>
              <member>{{ ike_dhgroup }}</member>
            </dh-group>
            <hash>
              <member>{{ ike_hash }}</member>
            </hash>
            <lifetime>
              <hours>{{ ike_lifetime }}</hours>
            </lifetime>
          </entry>
        </ike-crypto-profiles>
        <ipsec-crypto-profiles>
          <entry name="{{ ipsec-crypto_name }}">
            <dh-group>{{ ipsec_dhgroup }}</dh-group>
            <lifetime>
              <hours>{{ ipsec_lifetime }}</hours>
            </lifetime>
            <esp>
              <authentication>
                <member>{{ ipsec_esp_auth }}</member>
              </authentication>
              <encryption>
                <member>{{ ipsec_esp_encryption }}</member>
              </encryption>
            </esp>
          </entry>
        </ipsec-crypto-profiles>
      </crypto-profiles>
      <gateway>
        <entry name="{{ ike-gw-name }}">
          <authentication>
            <pre-shared-key>
              <key>{{ ike-gw-psk }}</key>
            </pre-shared-key>
          </authentication>
          <protocol>
            <ikev1>
              <dpd>
                <enable>{{ ikev1-dpd }}</enable>
              </dpd>
              <ike-crypto-profile>{{ ikev1-profile }}</ike-crypto-profile>
            </ikev1>
            <ikev2>
              <dpd>
                <enable>{{ ikev2-dpd }}</enable>
              </dpd>
              <ike-crypto-profile>{{ ikev2-profile }}</ike-crypto-profile>
              <require-cookie>no</require-cookie>
            </ikev2>
            <version>{{ ike-version }}</version>
          </protocol>
          <protocol-common>
            <nat-traversal>
              <enable>yes</enable>
            </nat-traversal>
            <fragmentation>
              <enable>no</enable>
            </fragmentation>
            <passive-mode>yes</passive-mode>
          </protocol-common>
          <local-address>
            <interface>vlan</interface>
          </local-address>
          <peer-address>
            <dynamic/>
          </peer-address>
          <local-id>
            <id>{{ local-id }}</id>
            <type>{{ local-type }}</type>
          </local-id>
          <peer-id>
            <id>{{ peer-id }}</id>
            <type>{{ peer-type }}</type>
          </peer-id>
        </entry>
      </gateway>
    </ike>